{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug Destiny",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/destiny",
          "args": [], // Add your program arguments here
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "MIMode": "lldb",  // Use "gdb" if you're on Linux
          "preLaunchTask": "build-debug",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for lldb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ]
      }
  ]
}